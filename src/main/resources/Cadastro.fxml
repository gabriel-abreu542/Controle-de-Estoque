<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.CadastroController">
   <center>
      <ScrollPane prefHeight="103.0" prefWidth="323.0">
         <content>
            <AnchorPane>
               <children>
                  <GridPane prefHeight="101.0" prefWidth="213.0">
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                     </rowConstraints>
                     <children>
                        <Label text="Nome">
                           <GridPane.margin>
                              <Insets left="50.0" />
                           </GridPane.margin>
                        </Label>
                        <TextField fx:id="nomeUsuario" GridPane.columnIndex="1" />
                        <Label prefHeight="17.0" prefWidth="41.0" text="Senha" GridPane.rowIndex="1">
                           <GridPane.margin>
                              <Insets left="50.0" />
                           </GridPane.margin>
                        </Label>
                        <TextField fx:id="senhaUsuario" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label prefHeight="17.0" prefWidth="95.0" text="Confirmar Senha" GridPane.rowIndex="2">
                           <GridPane.margin>
                              <Insets left="10.0" />
                           </GridPane.margin>
                        </Label>
                        <TextField fx:id="confirmarSenha" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                     </children>
                  </GridPane>
               </children>
            </AnchorPane>
         </content>
      </ScrollPane>
   </center>
   <bottom>
      <HBox prefHeight="43.0" prefWidth="338.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#onCadastroAction" text="Cadastrar">
               <HBox.margin>
                  <Insets left="8.0" top="10.0" />
               </HBox.margin></Button>
            <Button mnemonicParsing="false" onAction="#onLimparAction" text="Limpar">
               <HBox.margin>
                  <Insets left="10.0" top="10.0" />
               </HBox.margin></Button>
            <Label alignment="BOTTOM_RIGHT" contentDisplay="RIGHT" prefHeight="21.0" prefWidth="122.0" text="JÃ¡ possui cadastro?">
               <HBox.margin>
                  <Insets top="10.0" />
               </HBox.margin>
            </Label>
            <Button fx:id="botaoLogin" mnemonicParsing="false" onAction="#goToLogin" text="Login">
               <HBox.margin>
                  <Insets left="5.0" top="10.0" />
               </HBox.margin></Button>
         </children>
      </HBox>
   </bottom>
   <top>
      <Label text="Cadastro" BorderPane.alignment="CENTER">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
   </top>
</BorderPane>
